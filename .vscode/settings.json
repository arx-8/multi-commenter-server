{
  "files.eol": "\n",
  "files.encoding": "utf8",

  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    // To prevent misdetection of indent size
    "editor.tabSize": 2
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },

  "typescript.tsdk": "node_modules/typescript/lib",

  // 正しくprettier導入するまでの一時対
  "prettier.arrowParens": "always",
  "prettier.semi": false,
  "prettier.trailingComma": "es5"
}
